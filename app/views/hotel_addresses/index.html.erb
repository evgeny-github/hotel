<h1>Listing hotel_addresses</h1>

<table>
  <tr>
    <th>Hotel</th>
    <th>Country</th>
    <th>State</th>
    <th>City</th>
    <th>Street</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hotel_addresses.each do |hotel_address| %>
  <tr>
    <td><%= hotel_address.hotel_id %></td>
    <td><%= hotel_address.country %></td>
    <td><%= hotel_address.state %></td>
    <td><%= hotel_address.city %></td>
    <td><%= hotel_address.street %></td>
    <td><%= link_to 'Show', hotel_address %></td>
    <td><%= link_to 'Edit', edit_hotel_address_path(hotel_address) %></td>
    <td><%= link_to 'Destroy', hotel_address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

